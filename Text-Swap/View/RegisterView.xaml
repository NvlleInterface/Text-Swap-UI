<UserControl x:Class="Text_Swap.View.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Text_Swap.View"
             mc:Ignorable="d" 
             xmlns:customcontrols="clr-namespace:Text_Swap.CustomControls"
             d:DesignHeight="600" d:DesignWidth="800"
             Loaded="UserControl_Loaded"
            MouseDown="UserControl_MouseDown"
             Background="Transparent">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
    </UserControl.Resources>

    <Border CornerRadius="12">
        <!--<Border.Background>
        <ImageBrush ImageSource="/Images/background.jpg"
                    Stretch="None" />
    </Border.Background>-->
        <Border CornerRadius="10"
        BorderThickness="5"
            Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource winBorderColor1}" Offset="0" />
                    <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75" />
                    <GradientStop Color="{StaticResource winBorderColor3}" Offset="1" />
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="REGISTER"
                           Foreground="DarkGray"
                           FontSize="10"
                           FontFamily="Nunito"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
                    <Button x:Name="btnMinimize" 
                        Background="#28AEED"
                        Content="-"
                        Foreground="White"
                        FontFamily="Nunito"
                        Cursor="Hand"
                        FontSize="16"
                        Grid.Column="1"
                        Click="btnMinimize_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="btnClose" 
                        Content="X"
                        Foreground="White"
                        FontFamily="Nunito"
                        Cursor="Hand"
                        FontSize="12"
                        Grid.Column="2"
                        Click="btnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DA34AE" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                            CornerRadius="9"
                                            Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                          HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <StackPanel Width="300"
                        Grid.Row="2"
                        Orientation="Vertical"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <!--<Image Source="/Images/Logo.png"
                       Width="100" Height="100" />-->
                    <TextBlock Text="Renseignez vos informations et créez "
                           FontSize="25"
                           FontWeight="Medium"
                           FontFamily="Nunito"
                           HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center">
                    </TextBlock>

                    <TextBlock Text="vos raccourcis intelligents"
                           Foreground="#A9C6FF"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Nunito"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,5,0,0">
                    </TextBlock>
                    <TextBlock Text="🕒 Temps économisé: 00:10:53"
                               Foreground="#3174FB"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Medium"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,5,0,0">
                    </TextBlock>

                    <TextBlock Text="Prénom"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Nunito"
                           Margin="0,15,0,0">
                    </TextBlock>
                    <TextBox x:Name="txtPrenom"
                         Text="{Binding Prenom, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="13"
                         FontWeight="Medium"
                         FontFamily="Nunito"
                         CaretBrush="LightGray"
                         BorderThickness="0,0,0,1"
                         Height="28"
                         VerticalContentAlignment="Center"
                         Padding="20,0,0,0"
                         Background="Transparent"
                         >
                    </TextBox>
                    <TextBlock Text="Nom"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Nunito"
                               Margin="0,15,0,0">
                    </TextBlock>
                    <TextBox x:Name="txtNom"
                             Text="{Binding Nom, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Nunito"
                             CaretBrush="LightGray"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="20,0,0,0"
                             Background="Transparent"
                             >
                    </TextBox>
                    <TextBlock Text="Email"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Nunito"
                           Margin="0,15,0,0">
                    </TextBlock>
                    <TextBox x:Name="txtEmail"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="13"
                         FontWeight="Medium"
                         FontFamily="Nunito"
                         Foreground="White"
                         CaretBrush="LightGray"
                         BorderThickness="0,0,0,1"
                         Height="28"
                         VerticalContentAlignment="Center"
                         Margin="0,5,0,0"
                         Padding="20,0,0,0"
                         Background="Transparent"
                         >

                    </TextBox>

                    <TextBlock Text="Password"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Nunito"
                           Margin="0,15,0,0">
                    </TextBlock>
                    <customcontrols:BindablePassword
                    Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Height="28"/>

                    <TextBlock Text="ConfirmPassword"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Nunito"
                           Margin="0,15,0,0">
                    </TextBlock>
                    <customcontrols:BindablePassword
                            Password="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Height="28"/>

                    <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#D7596D"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Nunito"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap">
                    </TextBlock>

                    <Button x:Name="btnRegister" 
                        Command="{Binding SubmitCommand}"
                        IsEnabled="{Binding IsNotLoading}"
                        BorderThickness="0"
                        Foreground="White"
                        FontFamily="Nunito"
                        Cursor="Hand"
                        FontSize="12"
                        Grid.Column="2"
                        Margin="0,30,0,0"
                            Background="Black">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#462AD8" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#28AEED" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">

                                    <Grid>
                                        <!-- Texte LOG IN -->
                                        <TextBlock Text="Créer un compte"
                                           Foreground="White"
                                           FontSize="12"
                                           FontFamily="Nunito"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                                   />

                                       
                                    </Grid>

                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">
                        <TextBlock Text="Avez vous déjà un compte?"
                                   Foreground="DarkGray"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Nunito"/>
                        <Button Grid.Row="5" 
                            Command="{Binding NavigateLoginCommand}"
                            Content=" Se connecter" Margin="0,-3,0,0" 
                                Foreground="#3174FB"
                                FontWeight="Bold"
                                Cursor="Hand"
                                >
                            <Button.Style>
                                <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button" >
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />

                                </Style>
                            </Button.Style>
                        </Button>

                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</UserControl>
