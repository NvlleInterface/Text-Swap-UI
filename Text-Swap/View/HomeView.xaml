<UserControl x:Class="Text_Swap.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Text_Swap.View"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <!-- Colonne gauche -->
            <ColumnDefinition Width="3*"/>
            <!-- Colonne droite -->
        </Grid.ColumnDefinitions>
       
        <StackPanel Grid.Row="0" 
                    Grid.Column="1" 
                    HorizontalAlignment="Right"
                    Margin="-600 0 0 0">

            <Grid>
                
                <!-- TextBox -->
                <TextBox VerticalAlignment="Top"
                         x:Name="textBox"
                         KeyUp="textBox_KeyUp"
                         FontFamily="Nunito"
                         HorizontalAlignment="Stretch"
                         Padding="25,5,5,5"
                         Width="300">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <!-- Icône FontAwesome -->
                <fa:IconImage Icon="Search"
                         Width="16"
                         Height="16"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Margin="5,0,0,0"
             
                         Foreground="Gray"/>

                <TextBlock Text="Recherchez un raccourci, une expression..."
                           Foreground="Gray"
                           FontSize="13"
                           FontFamily="Nunito"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"
                           IsHitTestVisible="False"
                           Visibility="{Binding Text, 
                        ElementName=textBox, 
                        Converter={StaticResource StringToVisibilityConverter}}"/>
            </Grid>

            <!-- Popup pour afficher les résultats -->
            <Popup x:Name="popupResults"
                       Placement="Bottom"
                       PlacementTarget="{Binding ElementName=textBox}"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       IsOpen="False">
                <Border Background="White"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Width="200"
                        MaxHeight="200">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Orientation="Vertical"
                            x:Name="resultStack">
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Popup>

        </StackPanel>
        <!-- Ligne 2 -->
        <TextBlock Grid.Row="0" 
                   Grid.Column="0" 
                   Text="Quel raccourci allons-nous créer aujourd'hui"
                   FontFamily="Nunito"
                   FontSize="14"
                   TextWrapping="Wrap"/>

        <!-- Ligne 3 -->
        <TextBlock Grid.Row="2" 
                   Grid.Column="0" 
                   Text="🕒 Temps économisé: 00:10:53"
                   FontSize="16"
                   Margin="0 20 0 0"
                   Foreground="#3174FB"/>

        <!-- Ligne 4 -->
        <StackPanel Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left">
            <TextBlock Text="Raccourci" 
                       FontSize="20"
                       FontWeight="DemiBold"
                       FontFamily="Nunito"
                       Margin="0 20 0 0"/>
            <TextBox x:Name="txtRaccourci"
                Width="200" Height="30" Padding="5"
                         BorderThickness="2" BorderBrush="Gray"
                         Background="White" FontSize="14"
                         FontFamily="Nunito"
                     Text="{Binding NewTrigger, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" >
                <TextBox.Effect>
                    <DropShadowEffect ShadowDepth="5" BlurRadius="5" Color="#3E7DFB" Opacity="0.5"/>
                </TextBox.Effect>
            </TextBox>
            <TextBlock Text="/Entrez votre raccourci"
                           Foreground="Gray"
                           FontSize="13"
                           FontFamily="Nunito"
                           VerticalAlignment="Center"
                           Margin="20,-27,0,0"
                           IsHitTestVisible="False"
                           Visibility="{Binding Text, 
                        ElementName=txtRaccourci, 
                        Converter={StaticResource StringToVisibilityConverter}}"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="1" Margin="0 0 0 0">
            <TextBlock Text="Vos derniers raccourcis" 
               FontSize="20"
               FontWeight="DemiBold"
               FontFamily="Nunito"/>
            
                <ListBox ItemsSource="{Binding RecentShortcuts}"
                 BorderBrush="Transparent" 
                 Background="White"
                 SelectedItem="{Binding ShortcutInput, Mode=TwoWay}"
                         Height="200"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                 MouseDoubleClick="ListBox_MouseDoubleClick">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                        <Border Background="#F9FBFF" Padding="5" Margin="2" Width="172">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Texte de l'élément -->
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center" FontSize="14"/>

                                    <!-- Icône FontAwesome -->
                                    <Button Grid.Column="1"
                                    Command="{Binding DataContext.OpenShortcutCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}"
                                            Cursor="Hand">
                                    <fa:IconImage Icon="UpRightFromSquare" Width="12" Height="12" />
                                </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
        </StackPanel>

        <!-- Ligne 5 -->
        <StackPanel Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left">
            <TextBlock Text="Expression complète"
                       FontSize="20"
                       FontWeight="DemiBold"
                       Margin="0 20 0 0"
                       FontFamily="Nunito"/>
            <TextBox x:Name="txtExpressionComplete"
                Width="450" Height="200" Padding="5"
                     BorderThickness="2" BorderBrush="Gray"
                     Background="White" FontSize="14"
                     TextWrapping="Wrap"
                     FontFamily="Nunito"
                     Text="{Binding NewReplacement, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" >
                <TextBox.Effect>
                    <DropShadowEffect ShadowDepth="5" BlurRadius="5" Color="#3E7DFB" Opacity="0.5"/>
                </TextBox.Effect>
            </TextBox>
            <TextBlock x:Name="txtPlaceHorlder" Text="Entrez le texte complet qui remplacera votre raccourci.
                       Exemple: Merci pour votre message, je vous réponds dès que possible."
                       Foreground="Gray"
                       FontSize="13"
                       FontFamily="Nunito"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                        Width="440"
                       Margin="20,-360,0,0"
                       IsHitTestVisible="False"
                       Visibility="{Binding Text,
                        ElementName=txtExpressionComplete, 
                        Converter={StaticResource StringToVisibilityConverter}}"/>
        </StackPanel>
        <!-- Ligne 6: Boutons -->
        <WrapPanel Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" Margin="0 20 0 0">
            <Button Background="#F9FBFF" 
                    BorderBrush="Transparent" 
                    BorderThickness="0" 
                    FontFamily="Nunito"
                    Margin="0 0 5 0"
                    Foreground="#3174FB"
                    Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="PlusCircle" 
                                  Width="12" 
                                  Height="12" 
                                  Margin="0 0 5 0"
                                  Foreground="#3174FB"/>
                    <TextBlock Text="Nouveau raccourcis"/>
                </StackPanel>
            </Button>
            <Button Background="#F9FBFF" 
                    Margin="0 0 5 0" 
                    FontFamily="Nunito"
                    BorderBrush="Transparent" 
                    BorderThickness="1"
                    Foreground="#3174FB"
                    Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="ExclamationTriangle" 
                                  Width="12" Height="12" 
                                  Margin="0 0 5 0"
                                  Foreground="#3174FB"/>
                    <TextBlock Text="Reclamation"/>
                </StackPanel>
            </Button>
            <Button Background="#F9FBFF" 
                    Margin="0 0 5 0" 
                    FontFamily="Nunito"
                    BorderBrush="Transparent" 
                    BorderThickness="2" 
                    Foreground="#3174FB"
                    Cursor="Hand"
                    >
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="Headset" 
                                  Width="12" 
                                  Height="12" 
                                  Margin="0 0 5 0"
                                  Foreground="#3174FB"/>
                    <TextBlock Text="Support client" />
                </StackPanel>
            </Button>
            <Button Background="#F9FBFF" 
                    Margin="0 0 5 0"  
                    BorderBrush="Transparent" 
                    BorderThickness="0" 
                    Foreground="#3174FB"
                    Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="Envelope" 
                                  Width="12" 
                                  Height="12" 
                                  Margin="0 0 5 0"
                                  Foreground="#3174FB"/>
                    <TextBlock Text="Mail"/>
                </StackPanel>
            </Button>
            <Button Background="#F9FBFF" 
                    Margin="0 0 5 0"
                    FontFamily="Nunito"
                    BorderBrush="Transparent" 
                    BorderThickness="0" 
                    Foreground="#3174FB"
                    Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="QuestionCircle" 
                                  Width="12" 
                                  Height="12" 
                                  Margin="0 0 5 0"
                                  Foreground="#3174FB"/>
                    <TextBlock Text="FAQ"/>
                </StackPanel>
            </Button>
            <Button Background="#F9FBFF" 
                    Margin="0 0 5 0"
                    BorderBrush="Transparent" 
                    BorderThickness="0" 
                    Foreground="#3174FB">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="Clock" 
                                  Width="12" 
                                  Height="12" 
                                  Margin="0 0 5 0"
                                  Foreground="#3174FB"/>
                    <TextBlock Text="Retard commande"/>
                </StackPanel>
            </Button>
        </WrapPanel>
        <Button Grid.Row="6" 
                Margin="0 20"
                Padding="10"
                Width="auto" 
                Height="40"
                FontFamily="Nunito"
                Content="Enregistrer le raccourci" 
                HorizontalAlignment="Left"
                Background="#3E7DFB"
                Foreground="White"
                BorderBrush="Transparent"
                BorderThickness="1"
                Cursor="Hand"
                Command="{Binding AddShortcutCommand}">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>

</UserControl>
